@model IEnumerable<CompanyJSL.Models.Rol>

@{
    ViewBag.Title = "Index - Roles";
}

<h2>Index - Roles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr class="header-table">
        <th>
            Nombre
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripción)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Rol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripción)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdRol }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdRol }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdRol })
            </td>
        </tr>
    }

</table>

@Styles.Render("~/Content/css")